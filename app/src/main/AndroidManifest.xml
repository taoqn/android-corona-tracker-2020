<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destructo.corona_tracker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme">
        <activity android:name=".View.UI.GlobalDetails"></activity>
        <activity android:name=".ViewModel.CountryDetails" />
        <activity
            android:name=".View.UI.HelplineActivity"
            android:label="@string/title_helpline" />
        <activity android:name=".View.UI.CoronaInfoActivity" />
        <activity android:name=".View.UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>