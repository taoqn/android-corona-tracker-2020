<resources>


    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="heading_textLarge_bold">
        <item name="android:fontFamily">@font/manrope_extrabold</item>
        <item name="android:textSize">@dimen/large_textSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="body_text_regular">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="body_textMedium_bold">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="body_textMedium_medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>


    <style name="byline_textSmall_regular">
        <item name="android:textSize">@dimen/byline_textSize</item>
        <item name="android:textStyle">italic</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:paddingStart">@dimen/text_large_padding</item>
        <item name="android:paddingEnd">@dimen/text_large_padding</item>
        <item name="android:background">@drawable/button_style_primary</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/manrope_medium</item>
    </style>

</resources>
